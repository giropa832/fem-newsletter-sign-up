<div id="newsletter">
    <%= image_tag "illustration-sign-up-mobile.svg", alt: "Illustration", id: "illustration" %>
    <div class="content">
        <div class="content-header">
            <h1>Stay updated!</h1>
            <p>Join 60,000+ product managers receiving monthly updates on:</p>
            <ul>
              <li>Product discovery and building what matters</li>
              <li>Measuring to ensure updates are a success</li>
              <li>And much more!</li>
            </ul>
        </div>
        <div class="content-form">
            <%= form_with(url: success_path, html: { novalidate: true }, method: :post, class: "form", data: { turbo: true }) do |form| %>
              <%= form.label :email, "Email address" %>
              <%= form.email_field :email, required: true, placeholder: "email@company.com", validate: true %>
              <span class="error-message"></span>
              <%= form.submit "Subscribe to monthly newsletter" %>
            <% end %>
        </div>
    </div>
</div>
